<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <context id="teloperator-common-dao" targetRuntime="MyBatis3">

    <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
      <property name="searchString" value="Example$"/>
      <property name="replaceString" value="Criteria"/>
    </plugin>

    <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin"/>
    <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
    <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
    <plugin type="com.itfsw.mybatis.generator.plugins.LimitPlugin"/>

    <commentGenerator>
      <property name="suppressDate" value="true"/>
    </commentGenerator>

    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
      connectionURL="jdbc:mysql://localhost:3306/shiro-demo"
      userId="root"
      password="qihenan123">
    </jdbcConnection>

    <javaModelGenerator targetPackage="org.qhn.coexist.shirojwtqhn.domain.entity"
      targetProject="src/main/java">
      <property name="enableSubPackages" value="true"/>
      <property name="trimStrings" value="true"/>
    </javaModelGenerator>

    <sqlMapGenerator targetPackage="mapper"
      targetProject="src/main/resources"> <!-- src/generated/resources -->
      <property name="enableSubPackages" value="true"/>
    </sqlMapGenerator>

    <javaClientGenerator type="XMLMAPPER"
      targetPackage="org.qhn.coexist.shirojwtqhn.domain.mapper"
      targetProject="src/main/java"><!-- src/generated/java -->
      <property name="enableSubPackages" value="true"/>
    </javaClientGenerator>

    <table schema="shiro-demo" tableName="qhn_user"
      domainObjectName="QhnUserDO">
      <property name="useActualColumnNames" value="false"/>
    </table>

    <table schema="shiro-demo" tableName="qhn_role"
      domainObjectName="QhnRoleDO">
      <property name="useActualColumnNames" value="false"/>
    </table>

    <table schema="shiro-demo" tableName="qhn_user_role"
      domainObjectName="QhnUserRoleDO">
      <property name="useActualColumnNames" value="false"/>
    </table>

    <table schema="shiro-demo" tableName="qhn_function"
      domainObjectName="QhnFunctionDO">
      <property name="useActualColumnNames" value="false"/>
    </table>

    <table schema="shiro-demo" tableName="qhn_role_function"
      domainObjectName="QhnRoleFunctionDO">
      <property name="useActualColumnNames" value="false"/>
    </table>

  </context>

</generatorConfiguration>
